{
    "variables": {
        "aws_region": "{{env `AWS_REGION`}}",
        "aws_ami_name": "packer {{isotime \"2006_01_02_03_04_05\"}}"
    },

    "builders": [{
        "type": "amazon-ebs",
        "user_data_file": "./scripts/setup_winrm.ps1",
        "region": "{{user `aws_region`}}",
        "instance_type": "t2.micro",
        "winrm_username": "Administrator",
        "ami_name": "{{user `aws_ami_name`}}",
        "ami_description": "KinderCare Windows Build: {{isotime \"2006/01/02:03:04:05\"}} ",
        "associate_public_ip_address" : true,
        "communicator":"winrm",
        "winrm_use_ssl": true,
        "winrm_insecure": true,
        "source_ami" : "ami-f3dcbc8b"
    }],

    "provisioners": [
        {
            "type": "chef-solo",
            "cookbook_paths": ["cookbooks"],
            "guest_os_type" : "windows",
            "run_list" : ["onecms::win_ext_web_configure"]
          }


    ]
}